<Page
    x:Class="TranslatorApp.Pages.OnlineTranslatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TranslatorApp.Pages"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 语言选择 -->
            <RowDefinition Height="*"/>
            <!-- 文本框 -->
            <RowDefinition Height="Auto"/>
            <!-- API选择+翻译按钮 -->
        </Grid.RowDefinitions>

        <!-- 顶部语言选择 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <ComboBox x:Name="CbFromLang" Width="150" PlaceholderText="输入语言"/>
            <Button x:Name="BtnSwapLang"
                    Width="{Binding ActualHeight, ElementName=CbFromLang}"
                    Height="{Binding ActualHeight, ElementName=CbFromLang}"
                    MinHeight="40"
                    Padding="0"
                    Click="BtnSwapLang_Click">
                <SymbolIcon Symbol="Switch" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <ComboBox x:Name="CbToLang" Width="150" PlaceholderText="输出语言"/>
        </StackPanel>

        <!-- 中间左右对称文本框 -->
        <Grid Grid.Row="1" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 输入文本框 -->
            <Grid Grid.Column="0">
                <TextBox x:Name="TbInput"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         PlaceholderText="在此输入待翻译文本..."
                         Padding="10,10,10,50"
                         TextChanged="TbInput_TextChanged"/>
                <!-- 按钮组（右下角） -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,5,5"
                            Spacing="5">
                    <Button x:Name="BtnCopyInput" Width="32" Height="32" Padding="0" Click="BtnCopyInput_Click">
                        <SymbolIcon Symbol="Copy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 输出文本框（只读 + 无内容禁用） -->
            <Grid Grid.Column="1">
                <TextBox x:Name="TbOutput"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         IsReadOnly="True"
                         IsEnabled="False"
                         PlaceholderText="翻译结果将显示在这里"
                         Padding="10,10,10,50"/>
                <!-- 按钮组（右下角） -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,5,5"
                            Spacing="5">
                    <Button x:Name="BtnCopyOutput" Width="32" Height="32" Padding="0" Click="BtnCopyOutput_Click">
                        <SymbolIcon Symbol="Copy" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    <Button x:Name="BtnSpeakOutput" Width="32" Height="32" Padding="0" Click="BtnSpeakOutput_Click">
                        <SymbolIcon Symbol="Volume" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    <Button x:Name="BtnFavOutput" Width="32" Height="32" Padding="0" Click="BtnFavOutput_Click">
                        <SymbolIcon Symbol="Favorite" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 底部 API 选择 + 翻译按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <ComboBox x:Name="CbApi" Width="200" Height="40" PlaceholderText="选择翻译 API"/>
            <Button x:Name="BtnTranslate" Content="翻译" Width="100" Height="40" Click="BtnTranslate_Click"/>
        </StackPanel>

        <!-- 顶部滑出提示 -->
        <Border x:Name="ToastPanel"
                Background="{ThemeResource AccentFillColorDefaultBrush}"
                CornerRadius="4"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Opacity="0">
            <TextBlock x:Name="ToastText" Foreground="White"/>
        </Border>
    </Grid>
</Page>