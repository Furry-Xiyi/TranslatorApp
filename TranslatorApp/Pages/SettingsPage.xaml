<Page
    x:Class="TranslatorApp.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Spacing="16" Padding="16">

                <!-- 外观组 -->
                <TextBlock Text="外观" FontSize="20" FontWeight="SemiBold"/>
                <Expander IsExpanded="True">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE706;" FontFamily="Segoe MDL2 Assets" />
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="主题" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="选择浅色、深色或跟随系统" Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Spacing="8" Margin="0,8,0,0">
                        <RadioButtons x:Name="RbTheme" SelectionChanged="RbTheme_SelectionChanged">
                            <x:String>跟随系统</x:String>
                            <x:String>浅色</x:String>
                            <x:String>深色</x:String>
                        </RadioButtons>
                    </StackPanel>
                </Expander>

                <Expander>
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Bullets" />
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="背景材质" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="不透明、云母、云母ALT、亚克力" Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Spacing="8" Margin="0,8,0,0">
                        <ComboBox x:Name="CbBackdrop" Width="220" SelectionChanged="CbBackdrop_SelectionChanged">
                            <ComboBoxItem Content="不透明" Tag="None"/>
                            <ComboBoxItem Content="云母" Tag="Mica"/>
                            <ComboBoxItem Content="云母ALT" Tag="MicaAlt"/>
                            <ComboBoxItem Content="亚克力" Tag="Acrylic"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>

                <!-- API 密钥组 -->
                <TextBlock Text="API 密钥" FontSize="20" FontWeight="SemiBold"/>

                <!-- Bing -->
                <Expander IsExpanded="True">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Globe" />
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="Bing" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="在线翻译页将从这里读取" Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Spacing="8">
                        <TextBox x:Name="TbBing" PlaceholderText="输入 Bing API Key" />
                        <Button Content="保存" Click="SaveBing_Click"/>
                    </StackPanel>
                </Expander>

                <!-- Baidu -->
                <Expander>
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="World" />
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="百度" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="在线翻译页将从这里读取" Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Spacing="8">
                        <TextBox x:Name="TbBaidu" PlaceholderText="输入 百度翻译 API Key" />
                        <Button Content="保存" Click="SaveBaidu_Click"/>
                    </StackPanel>
                </Expander>

                <!-- Youdao -->
                <Expander>
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Library" />
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="有道" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="在线翻译页将从这里读取" Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Spacing="8">
                        <TextBox x:Name="TbYoudao" PlaceholderText="输入 有道翻译 API Key" />
                        <Button Content="保存" Click="SaveYoudao_Click"/>
                    </StackPanel>
                </Expander>

                <!-- 关于组 -->
                <TextBlock Text="关于" FontSize="20" FontWeight="SemiBold"/>
                <Expander IsExpanded="True">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="40" Height="40" Source="ms-appx:///Assets/StoreLogo.png"/>
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock x:Name="TxtAppName" FontSize="18" FontWeight="SemiBold" Text="应用名占位"/>
                                <TextBlock Text="©2025 Furry Xiyi。保留所有权利。" Opacity="0.7"/>
                                <TextBlock x:Name="TxtVersion" Opacity="0.7" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                        <!-- TODO: 替换为你的实际链接 -->
                        <HyperlinkButton Content="加入QQ群聊" NavigateUri="https://TODO-QQ"/>
                        <HyperlinkButton Content="加入Discord群组" NavigateUri="https://TODO-Discord"/>
                    </StackPanel>
                </Expander>

                <!-- 页底反馈链接 -->
                <!-- TODO: 替换为你的反馈链接 -->
                <HyperlinkButton Content="发送反馈" HorizontalAlignment="Left" NavigateUri="https://TODO-Feedback"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 全屏加载遮罩 -->
        <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed">
            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="80" Height="80"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>