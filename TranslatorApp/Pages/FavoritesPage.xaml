<Page
    x:Class="TranslatorApp.Pages.FavoritesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TranslatorApp.Models"
    xmlns:local="using:TranslatorApp.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <local:GreaterThanZeroToVisibilityConverter x:Key="GreaterThanZeroToVisibilityConverter"/>

        <!-- 列表视图模板 -->
        <DataTemplate x:Key="ListItemTemplate" x:DataType="models:FavoriteItem">
            <Grid ColumnDefinitions="*,Auto" Padding="8" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="{x:Bind Term}" FontSize="18" />
                    <TextBlock Text="{x:Bind AddedOn, Mode=OneWay}" Opacity="0.6"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Content="删除"
                        Background="Red"
                        Foreground="White"
                        Padding="8,4"
                        MinWidth="50"
                        Margin="8,0,0,0"
                        Click="DeleteButton_Click"/>
            </Grid>
        </DataTemplate>

        <!-- 磁贴布局模板 -->
        <ItemsPanelTemplate x:Key="TileItemsPanel">
            <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
        </ItemsPanelTemplate>

        <!-- 磁贴视图模板 -->
        <DataTemplate x:Key="TileItemTemplate" x:DataType="models:FavoriteItem">
            <Border Width="150" Height="150"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="8">
                <Grid RowDefinitions="*,Auto">
                    <StackPanel Grid.Row="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="4">
                        <TextBlock Text="{x:Bind Term}" FontSize="20" FontWeight="SemiBold"
                                   TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Text="{x:Bind AddedOn, Mode=OneWay}" FontSize="12" Opacity="0.6"
                                   TextAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Row="1"
                            Content="删除"
                            Background="Red"
                            Foreground="White"
                            Padding="8,4"
                            MinWidth="50"
                            HorizontalAlignment="Center"
                            Margin="0,4,0,0"
                            Click="DeleteButton_Click"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- 磁贴模式下的容器样式 -->
        <Style x:Key="TileListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter
                            CornerRadius="8"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                            PointerOverBackground="{ThemeResource ListViewItemBackgroundPointerOver}"
                            PressedBackground="{ThemeResource ListViewItemBackgroundPressed}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 系统风格底部指示条 + 动画 -->
        <Style x:Key="ViewToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border x:Name="Indicator"
                                    Height="2"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Stretch"
                                    Opacity="0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0" />
                                </Border.RenderTransform>
                            </Border>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver"/>
                                    <VisualState x:Name="Pressed"/>
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Indicator"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Indicator"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Indicator"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Indicator"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid Padding="16" RowDefinitions="Auto,*">

            <!-- 工具栏（紧凑排序 + 视图切换） -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="排序依据" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
                    <ComboBox x:Name="SortSelector"
                              Width="180"
                              Height="32"
                              VerticalAlignment="Center"
                              SelectionChanged="SortSelector_SelectionChanged">
                        <ComboBoxItem Content="名称 (A 到 Z)" IsSelected="True"/>
                        <ComboBoxItem Content="名称 (Z 到 A)"/>
                        <ComboBoxItem Content="时间（最新优先）"/>
                        <ComboBoxItem Content="时间（最旧优先）"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <ToggleButton x:Name="ListViewToggle"
                                  Style="{StaticResource ViewToggleButtonStyle}"
                                  IsChecked="True"
                                  ToolTipService.ToolTip="列表视图"
                                  Click="ListViewToggle_Click">
                        <FontIcon Glyph="&#xE179;"/>
                    </ToggleButton>
                    <ToggleButton x:Name="TileViewToggle"
                                  Style="{StaticResource ViewToggleButtonStyle}"
                                  ToolTipService.ToolTip="磁贴视图"
                                  Click="TileViewToggle_Click">
                        <FontIcon Glyph="&#xE80A;"/>
                    </ToggleButton>
                </StackPanel>
            </StackPanel>

            <!-- 空数据提示 -->
            <TextBlock Grid.Row="1"
                       Text="快来收藏词汇"
                       FontSize="18"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{x:Bind Favorites.Count, Mode=OneWay,
                                    Converter={StaticResource ZeroToVisibilityConverter}}"/>
            <!-- 列表 -->
            <ListView x:Name="List"
                      Grid.Row="1"
                      x:FieldModifier="public"
                      ItemsSource="{x:Bind Favorites, Mode=OneWay}"
                      ItemTemplate="{StaticResource ListItemTemplate}"
                      IsItemClickEnabled="True"
                      ItemClick="List_ItemClick"
                      SelectionMode="None"
                      HorizontalContentAlignment="Stretch"
                      Visibility="{x:Bind Favorites.Count, Mode=OneWay,
                                   Converter={StaticResource GreaterThanZeroToVisibilityConverter}}"/>
        </Grid>

        <!-- 悬浮 InfoBar -->
        <InfoBar x:Name="DeleteInfoBar"
                 Width="260"
                 MaxHeight="60"
                 CornerRadius="8"
                 Padding="8,4"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,20,0,0"
                 IsOpen="False"
                 Severity="Informational"
                 Background="#FFB71C1C"
                 Foreground="White"
                 RenderTransformOrigin="0.5,0">
            <InfoBar.RenderTransform>
                <TranslateTransform Y="-40"/>
            </InfoBar.RenderTransform>
        </InfoBar>
    </Grid>
</Page>