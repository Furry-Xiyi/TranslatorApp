<Page
    x:Class="TranslatorApp.Pages.WordLookupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- “标题栏显示一个搜索框”的要求：页顶放置长搜索框 + 网站选择下拉 -->
        <StackPanel Orientation="Horizontal" Spacing="8" Margin="16,16,16,8">
            <ComboBox x:Name="CbSite" Width="140">
                <ComboBoxItem Content="Google" Tag="Google"/>
                <ComboBoxItem Content="百度" Tag="Baidu"/>
                <ComboBoxItem Content="有道" Tag="Youdao" IsSelected="True"/>
            </ComboBox>

            <AutoSuggestBox x:Name="SearchBox"
                            QueryIcon="Find"
                            PlaceholderText="输入要查的词汇..."
                            TextChanged="SearchBox_TextChanged"
                            QuerySubmitted="SearchBox_QuerySubmitted"
                            Width="720"/>
        </StackPanel>

        <!-- 网页嵌入 -->
        <Grid Grid.Row="1">
            <controls:WebView2 x:Name="Web" />

            <!-- 右下角悬浮收藏按钮，覆盖在 Web 之上 -->
            <Button x:Name="FabFavorite" Content="★"
                    Width="56" Height="56"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="16"
                    CornerRadius="28"
                    Background="{ThemeResource SystemControlHighlightAccentBrush}"
                    Foreground="White"
                    Click="FabFavorite_Click"
                    ToolTipService.ToolTip="收藏当前查询词汇"/>
        </Grid>
    </Grid>
</Page>