<Page
    x:Class="TranslatorApp.Pages.WordLookupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- 网页嵌入 -->
        <Grid>
            <controls:WebView2 x:Name="Web" />

            <!-- 右下角悬浮收藏按钮（WinUI 符号星形） -->
            <Button x:Name="FabFavorite"
                    Width="56" Height="56"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="16"
                    CornerRadius="28"
                    Background="{ThemeResource SystemControlHighlightAccentBrush}"
                    Foreground="White"
                    Click="FabFavorite_Click"
                    ToolTipService.ToolTip="收藏当前查询词汇">
                <SymbolIcon Symbol="Favorite"/>
            </Button>
        </Grid>
    </Grid>
</Page>