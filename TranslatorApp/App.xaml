<Application
    x:Class="TranslatorApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- WinUI 控件默认资源 -->
                <controls:XamlControlsResources />
                <ResourceDictionary Source="ms-appx:///Shimmer.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="TitleBarButtonForegroundColorLight">#FF000000</Color>
            <Color x:Key="TitleBarButtonForegroundColorDark">#FFFFFFFF</Color>
            <Color x:Key="TitleBarButtonBackgroundTransparent">#00000000</Color>
            <!-- 浅色主题下的悬停/按下背景 -->
            <Color x:Key="TitleBarButtonHoverBackgroundLight">#33000000</Color>
            <Color x:Key="TitleBarButtonPressedBackgroundLight">#55000000</Color>

            <!-- 深色主题下的悬停/按下背景 -->
            <Color x:Key="TitleBarButtonHoverBackgroundDark">#33FFFFFF</Color>
            <Color x:Key="TitleBarButtonPressedBackgroundDark">#55FFFFFF</Color>
            <!-- 如果需要，可以在这里添加自定义主题资源 -->
            <!-- 例如手动覆盖 TabViewButtonBackground -->
            <!--
            <SolidColorBrush x:Key="TabViewButtonBackground" Color="Transparent"/>
            -->
        </ResourceDictionary>
    </Application.Resources>
</Application>