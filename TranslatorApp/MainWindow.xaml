<Window
    x:Class="TranslatorApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TranslatorApp"
    xmlns:pages="using:TranslatorApp.Pages"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="翻译">

    <Grid>
        <!-- 自定义标题栏 -->
        <Grid x:Name="CustomDragRegion"
              Height="48"
              VerticalAlignment="Top"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧 -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="8"
                        Margin="12,0,0,0">
                <Image x:Name="AppIconImage" Width="20" Height="20" Stretch="Uniform"/>
                <TextBlock Text="翻译" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 中间 -->
            <Grid x:Name="TitleBarCenterHost"
                  Grid.Column="1"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Stretch"/>

            <!-- 右侧 -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="8"
                        Margin="0,0,12,0"/>
        </Grid>

        <!-- 主内容区 -->
        <Grid Margin="0,48,0,0">
            <controls:NavigationView x:Name="NavView"
                                     PaneDisplayMode="Left"
                                     IsSettingsVisible="True"
                                     IsBackButtonVisible="Visible"
                                     BackRequested="NavView_BackRequested"
                                     SelectionChanged="NavView_SelectionChanged">
                <controls:NavigationView.Resources>
                    <SolidColorBrush x:Key="TabViewButtonBackground" Color="Transparent"/>
                </controls:NavigationView.Resources>

                <controls:NavigationView.MenuItems>
                    <controls:NavigationViewItem x:Name="Nav_Online"
                                                 Content="在线翻译"
                                                 Icon="Globe"
                                                 Tag="OnlineTranslatePage"/>
                    <controls:NavigationViewItem x:Name="Nav_Lookup"
                                                 Content="查词翻译"
                                                 Icon="Find"
                                                 Tag="WordLookupPage"/>
                    <controls:NavigationViewItem x:Name="Nav_Fav"
                                                 Content="收藏"
                                                 Icon="Favorite"
                                                 Tag="FavoritesPage"/>
                </controls:NavigationView.MenuItems>

                <Frame x:Name="ContentFrame"/>
            </controls:NavigationView>
        </Grid>

        <!-- 全局 Loading 遮罩 -->
        <Grid x:Name="LoadingOverlay"
              Background="#80000000"
              Visibility="Collapsed">
            <ProgressRing IsActive="True"
                          Width="60"
                          Height="60"
                          Foreground="{ThemeResource SystemAccentColor}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>